<div class="row">
	<h3>Comments</h3>
	<div class="col-xs-12 m-bottom">
		<div class="row">
			<ul>
				<% @comments.each do |comment| %>
					<li><span><a href="/comment/<%= comment.id %>"><%= comment.content[0,20] %></a> - <%= comment.created_at.strftime("%c") %></span></li>
				<% end %>
				<% if @comments.empty? %>
					<p>No comments to show</p>
				<% end %>
			</ul>
		</div>
	</div>
			<h4>Add New Comment</h4>

	<div class="col-xs-12 m-bottom">

		<div class="row">
			<form action="/comment/add" method="post" accept-charset="utf-8">
				<label for="ownername">Owner Name: </label>
			   	<input type="text" name="ownername" required>
			   	<label for="content">Content: </label>
			   	<textarea type="text" name="content" required></textarea>
			   	<input type ="submit" class="btn-success btn" value="Submit Comment">
			</form>
		</div>
	</div>
</div>